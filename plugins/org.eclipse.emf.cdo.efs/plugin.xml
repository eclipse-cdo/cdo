<plugin>

   <extension
         id="org.eclipse.core.filesystem.cdo"
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem scheme="cdo.net4j.tcp">
         <run class="org.eclipse.emf.cdo.internal.efs.CDOFileSystem$Net4j$TCP"/>
      </filesystem>
   </extension>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.eclipse.emf.cdo.efs.actionSet"
            label="EFS Test Action Set"
            visible="true">
         <menu
               id="sampleMenu"
               label="Sample &amp;Menu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               class="org.eclipse.emf.cdo.internal.efs.ui.CreateCDOProjectAction"
               icon="icons/sample.gif"
               id="org.eclipse.emf.cdo.efs.actions.CreateCDOProjectAction"
               label="EFS TEST"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Create an EFS project">
         </action>
      </actionSet>
   </extension>

</plugin>
